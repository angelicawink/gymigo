<h1>Gymigo</h1>
<% if @user.errors.any? %>
There were some errors:<br>
<% @user.errors.full_messages.each do |message| %>
<%= message %>
<% end %>
<% end %>

<%= form_for @user do |f| %>
<%= f.label :username %>
<%= f.text_field :username %><br>
<%= f.label :password %>
<%= f.password_field :password %>
<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %><br>
<%= f.submit "sign up!" %>
<% end %>

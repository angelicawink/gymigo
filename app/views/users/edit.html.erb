<h1>Edit Profile</h1>
<% if @user.errors.any? %>
There were some errors:<br>
<% @user.errors.full_messages.each do |message| %>
<%= message %><br>
<% end %>
<% end %>
<br>
<%= form_for @user do |f| %>
<%= f.label :username %>
<%= f.text_field :username %><br>
<%= f.label :city %>
<%= f.text_field :city %><br>
<%= f.label :experience %>
<%= f.text_field :experience %><br>
<%= f.label :goals %>
<%= f.text_area :goals %><br>


<%= f.submit :'Update Profile', class: "btn btn-warning" %>
<% end %>
